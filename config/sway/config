}

exec_always {
    nwg-dock -nows -p left -d -hd 100000
    swaync
    pgrep autoLightDark || autoLightDark
    pgrep swayidle || swayidle
    swww-daemon --format xrgb
    $home/.local/bin/randomize-wallpaper.sh
}

